/** \file lcddemo.c
 *  \brief A simple demo that draws a string and circle
 */

#include <libTimer.h>
#include <lcdutils.h>
#include <lcddraw.h>
#include <p2switches.h>
#include "triangle.h"


/** Initializes everything, clears the screen, draws "hello" and the circle */
void main()
{
  configureClocks();
  lcd_init();
  p2sw_init(15);
  or_sr(0x8);			/* GIE (enable interrupts) */
  u_char width = screenWidth, height = screenHeight;

  clearScreen(COLOR_WHITE);

  int state = 0; 
  while (1) {
    
    if ((P2IN & BIT0) == 0)
      state = 1;
    else if ((P2IN & BIT1) == 0)
      state = 2;
    else if ((P2IN & BIT2) == 0)
      state = 3;
    else if((P2IN & BIT3) == 0)
      state = 4;
    else
      state = 0;
    
    switch (state) {
    case (1):
      drawString5x7(40, 70, "hello", COLOR_BLACK, COLOR_WHITE);
      break;
    case (2):
      drawTriangle();
    case (4):
      clearScreen(COLOR_WHITE);
    default:
      ;
    }
  } 
}
